extends ../main

block personalStyle
	link(rel="stylesheet", type="text/css", href="/static/css/product.css")
	link(rel="stylesheet", type="text/css", href="/static/css/page.css")

block title
	| Название товара

block main-content	
	nav.bread
		ul.bread__list
			- var items = {'.': 'Главная', '/goods' : 'Товары', '{{ category_i.id }}': '{{ category_i.title }}', '#' : '{{ goods_i.title }}' }
			each val, index in items
				li(class="bread__item" + ((index=== '#') ? ' active' : '' ) )
					a(href= index, class="bread__link")= val
  
	section.section.productSection
		ul.products__list
			li.products__item
				.products__item-inner.clearfix 
					.products__left 
						.products__left-container
							.products__attr
								a(href= "#").products__attr-name {{ goods_i.title }}
					.products__about.clearfix
						.products__image
							a(href="#").products__image-display
								img(src='/static/img/' + '{{ goods_i.image }}', alt= '{{ goods_i.title }}').products__image-pic.goods__img
						.products__desc
							a(href= '#').products__desc-title {{ goods_i.title }}
							ul.products__desc-options 
								| {% for spec in goods_i.specs.strip('{}').split("', '") %}
								li(class="products__option-item " + ((index++ % 2) ? '' : 'products__option-item-odd') )
									.products__options-key {{ spec.split(": '")[0].lstrip("'").rstrip("'") }}
									.products__options-value {{ spec.split(": '")[1].lstrip("'").rstrip("'") }}
								| {% endfor %}
							
					.products__right
						.products__info
							.products__price
								span.products__price-label Цена
								span.products__price-num {{ goods_i.price }}
									i.rub
							.products__price
								span.products__price-label Установка
								span.products__price-num {{ goods_i.stage_price }}
									i.rub
							.products__info-button
								a(href="#").products__buy-btn Заказать
