extends ../main

block personalStyle
	link(rel="stylesheet", type="text/css", href="/static/css/product.css")

block title
	| Регистрация

block main-content
	nav.bread
		ul.bread__list
			- var items = {'.': 'Главная', '#' : 'Регистрация'}
			each val, index in items
				li(class="bread__item" + ((index === '#') ? ' active' : '' ) )
					a(href= index, class="bread__link")= val

	section.section
		header.section__header
			h2.section__header-name
				| Регистрация
			| {% with messages = get_flashed_messages() %}
			| {% if messages %}
			| {% for message in messages %}
			.row
				.alert.alert-info(role="alert") {{ message }}
			| {% endfor %}
			| {% endif %}
			| {% endwith %}
			form.form(action="" method="post")
				input(type="text" id="username" name="username" placeholder="Введите имя пользователя" required value="{{ request.form.username }}")
				input(type="password" id="password" name="password" placeholder="Введите пароль" required value="{{ request.form.password }}")
				input(type="email" id="email" name="email" placeholder="Enter Email" value="{{ request.form.username }}" required)
				input(type="submit" value="Регистрация")
