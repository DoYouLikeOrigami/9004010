extends ../main

block personalStyle
  link(rel="stylesheet", type="text/css", href="/static/css/file.css")

block title
  | Загрузка и скачивание xls
block main-content

  section.section.section--white
    .file
      form.form(action='/save_db/', method="POST", data-form="file", enctype='multipart/form-data' )
        label
          | Загрузите xls файл
          input(type="file", name='file', required)
        input(type="submit", value="Загрузить")
      .file__buttons
        a.btn.btn--download-file(href='/get_db/') Скачать файл
        a.btn.btn--reload-file(href='/save_db/') Обновить базу
        a.btn.btn--reload-file(href="/update_market/") Обновить файл на Я́ндекс.маркет
        a.btn.btn--secondary(href="/") На главную
