extends ../main

block personalStyle
	link(rel="stylesheet", type="text/css", href="static/css/page.css")

block title
	| Название категории
block main-content	
	nav.bread
		ul.bread__list
			// Только ссылки измени. Джеид оставь
			- var items = {'index.html': 'Главная', 'goods.html' : 'Товары', '#': 'Барьеры'}
			each val, index in items
				li(class="bread__item" + ((val=== 'Барьеры') ? ' active' : '' ) )
					a(href= index, class="bread__link")= val

	section.section.goodsSection
		ul.products__list
			// Весь Джеид можно убрать, переменные из БД
			- var products__attrs = ['Барьер БТК.3']
			- var products__names = ['Барьер парковочный "треугольник"']
			- var products__href = ['PSH_201']
			- var products__dest = 'barieri/'
			- var products__images = ['1']
			- var products__chars = ['Толщина стенки']
			- var products__values = [['3 мм', 'Сталь']]
			- var products__prices = ['999']
			- var products__stage = ['299']

			- for (var i = 0; i < products__names.length; i++)
				//Переменные сюда передавай вместо текущих
				+products__item(
					products__attrs[i],
					products__names[i],
					products__href[i],
					products__dest,
					products__images[i],
					products__chars,
					products__values[i],
					products__prices[i],
					products__stage[i])

	// У каждой категории будет описание для SEO оптимизации 
	// Картинок скорее всего не будет, вот текст и заголовок - точно
	// Заголовок описания и название категории будут совпадать. А от для текста нужно будет отдельное большое поле.
	
	- var this_desc_title = 'Описание "Парковочные барьеры"'
	- var this_img_src = ['http://www.strod-servis.ru/images/000.jpg','http://www.mosarz10.ru/_pictures/dsc01310.jpg','http://golovinskiy.mos.ru/upload/medialibrary/816/vydvizhnye-stolbiki.jpg'] 
	- var this_desc_for_img = ['Ограждение территории','Защита индивидуального парковочного места', 'Заградитель проезда']
	- var this_paragraph_below = '<p></p>'
	
	section.section
		header.section__header
			h2.section__header-name= this_desc_title
		.full-desc__first-part__wrapper
			+full-desc__first-part(this_img_src, this_desc_for_img, this_paragraph_below)

			- var this_title_list = 'В данный момент мы предлагаем 5 вариантов парковочных барьеров:' 
			- var this_list_values = ['парковочный барьер "треугольный" БТК-3','стандартный антипарковочный барьер АБ-1','усиленный парковочный барьер АБ-1У','усиленный люксовый парковочный барьер АБ-1УЛ', 'нержавеющий парковочный барьер АБН-1']

			-var this_list_href = ['#','#','#','#','#']

			//+fullDesc__list(this_title_list, this_list_values, this_list_href)